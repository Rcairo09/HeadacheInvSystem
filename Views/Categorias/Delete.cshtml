@model HeadacheInvSystem.Models.Categorium

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Delete</h1>
@if (ViewBag.AllowDelete)
{
    <h3>¿Estás seguro que quieres elimnar esta categoría?</h3>
}
else
{
    <h3 class="text-danger">No se puede eliminar<br>La categoría tiene datos relacionados con la tabla Producto</h3>
}
<div>
    <h4>Categoría</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCategoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        @if (ViewBag.AllowDelete)
        {
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        } |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
