@model IEnumerable<HeadacheInvSystem.Models.Kardex>

@{
    ViewData["Title"] = "Índice Principal";
}

<h1>Índice</h1>

<p>
    <a asp-action="Create">Nuevo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entradas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salidas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Existencias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoPromedio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Debe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Haber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Saldo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entradas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salidas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Existencias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Compra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostoPromedio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Debe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Haber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.ProductoNombre)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.KardexId">Detalles</a> 
            </td>
        </tr>
}
    </tbody>
</table>
