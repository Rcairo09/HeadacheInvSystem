@model HeadacheInvSystem.Models.Producto

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>
@if (ViewBag.AllowEdit)
{
    <h4>Producto</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductoId" />
                <div class="form-group">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProveedorId" class="control-label"></label>
                    <select asp-for="ProveedorId" class="form-control" asp-items="ViewBag.ProveedorId"></select>
                    <span asp-validation-for="ProveedorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductoNombre" class="control-label"></label>
                    <input asp-for="ProductoNombre" class="form-control"/>
                    <span asp-validation-for="ProductoNombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductoPrecioUnitario" class="control-label"></label>
                    <input asp-for="ProductoPrecioUnitario" class="form-control" />
                    <span asp-validation-for="ProductoPrecioUnitario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if (ViewBag.AllowEdit)
                    {
                        <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                    }
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        Este elemento no se puede editar<br> Tiene datos relacionados en la tabla Kardex
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductoId" />
                <div class="form-group">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId" disabled></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProveedorId" class="control-label"></label>
                    <select asp-for="ProveedorId" class="form-control" asp-items="ViewBag.ProveedorId" disabled></select>
                    <span asp-validation-for="ProveedorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductoNombre" class="control-label"></label>
                    <input asp-for="ProductoNombre" class="form-control" readonly />
                    <span asp-validation-for="ProductoNombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductoPrecioUnitario" class="control-label"></label>
                    <input asp-for="ProductoPrecioUnitario" class="form-control" readonly />
                    <span asp-validation-for="ProductoPrecioUnitario" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
}

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
