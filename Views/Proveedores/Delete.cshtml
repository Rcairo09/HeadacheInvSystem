@model HeadacheInvSystem.Models.Proveedor

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>
@if (ViewBag.AllowDelete)
{
    <h3>¿Estás seguro que quieres elimnar este Proveedor?</h3>
}
else
{
    <h3 class="text-danger">No se puede eliminar<br>El Proveedor tiene datos relacionados con la tabla Producto</h3>
}
<div>
    <h4>Proveedor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Celular)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Celular)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProveedorId" />
        @if (ViewBag.AllowDelete)
        {
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        } |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
